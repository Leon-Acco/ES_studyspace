<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.acho.dao.GoodsMapper" >

    <select id="findAll" resultType="com.acho.bean.Goods"  >
        select
            `id`,
            `title`,
            `price`,
            `stock`,
            `saleNum`,
            `createTime`,
            `categoryName`,
            `brandName`,
            `spec`  as specStr
        from goods
    </select>




</mapper>